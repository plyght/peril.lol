---
import BaseHead from '../components/BaseHead.astro';
import SiteNav from '../components/SiteNav.astro';
// import { SimpleBannerBlur } from '@/components/ui/simple-banner-blur'; // Removed

// Import Tailwind CSS globally
import '../styles/globals.css';
---

<!doctype html>
<html lang="en" style="margin: 0; padding: 0;">
  <head>
    <BaseHead
      title="plyght"
      description="plyght's personal website - Student & Full Stack Developer"
    />
  </head>
  <body style="margin: 0; padding: 0;">
    <!-- Film grain background effect - double implementation for compatibility -->
    <div class="grain-container">
      <div class="grain"></div>
    </div>
    <div class="grain-overlay"></div>

    <table class="header" style="border-spacing: 0; margin: 12px 0 0 0; padding: 0;">
      <tr>
        <td
          colspan="4"
          class="banner-cell"
          style="position: relative; padding: 0; overflow: hidden;"
        >
          <div style="width: 100%; height: 100%;">
            <picture>
              <source srcset="/images/webp/banner_home_optimized.webp" type="image/webp" />
              <img
                src="/images/banner_home_optimized.png"
                alt="Banner"
                width="1200"
                height="800"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                style="width: 100%; height: 100%; object-fit: cover; object-position: center center; display: block;"
              />
            </picture>
          </div>
          <!-- SimpleBannerBlur removed -->
          <div class="nav-bottom-container">
            <SiteNav />
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="2" rowspan="2" class="width-auto">
          <div class="title-wrap">
            <!--            <img src="images/pfp.png" alt="Profile Pic">-->
            <div>
              <h1 class="title">plyght</h1>
              <span class="subtitle">Student & Part Time Full Stack Dev</span>
            </div>
          </div>
        </td>
        <th>Pronouns</th>
        <td class="width-min">he/him</td>
      </tr>
      <tr>
        <th>School</th>
        <td class="width-min"><time style="white-space: pre;">WLHS</time></td>
      </tr>
      <tr>
        <td colspan="4" class="width-auto">
          <div class="links-container">
            <div class="links-title">Links</div>
            <div class="links-row">
              <a href="https://bsky.app/profile/peril.lol" target="_blank" class="animated-link"
                >Bluesky</a
              >
              <a href="https://github.com/plyght" target="_blank" class="animated-link">GitHub</a>
              <a href="https://www.youtube.com/@plyght_" target="_blank" class="animated-link"
                >Youtube</a
              >
              <a href="/blog/resume" class="animated-link">Resume</a>
            </div>
          </div>
        </td>
      </tr>
    </table>

    <div class="scroll-indicator">
      <div class="scroll-arrow"></div>
    </div>

    <main class="stagger-fade-in" transition:animate="fade">
      <slot />
    </main>
  </body>
</html>
